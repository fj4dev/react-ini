{
  "compilerOptions": {                            
    "lib": ["DOM", "DOM.Iterable", "ESNext"],           
    "allowJs": true,                                    
    "jsx": "react-jsx",                                
    "module": "commonjs",                                
    "moduleResolution": "node",           
    "resolveJsonModule": true, 
    "isolatedModules": true,           
    "noEmit": true,                                    
    "allowSyntheticDefaultImports": true,             
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "include": ["src"]
}
